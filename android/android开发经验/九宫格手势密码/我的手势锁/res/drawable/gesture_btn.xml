<?xml version="1.0" encoding="utf-8"?>
<!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true"><shape>

            <!--
	        	颜色渐变
	        	startColor:开始颜色
	        	endColor:结束颜色
	        	angle:渐变方向 
            -->
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
            <!--
	        	按钮边缘
	        	width:边缘宽
	        	color:边缘颜色
            -->
            <stroke android:width="2dp" android:color="@color/black6e" />
            <!--
	        	按钮四个圆角
	        	radius:半径
            -->
            <corners android:bottomLeftRadius="15px" android:bottomRightRadius="15px" android:topLeftRadius="15px" android:topRightRadius="15px" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <!-- 焦点 -->
    <item android:state_focused="true"><shape>
           <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="2dp" android:color="@color/black" />

            <corners android:bottomLeftRadius="15px" android:bottomRightRadius="15px" android:topLeftRadius="15px" android:topRightRadius="15px" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <!-- 无焦点 -->
    <item><shape>
           <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />

            <stroke android:width="2dp" android:color="@color/black" />

            <corners android:bottomLeftRadius="15px" android:bottomRightRadius="15px" android:topLeftRadius="15px" android:topRightRadius="15px" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>