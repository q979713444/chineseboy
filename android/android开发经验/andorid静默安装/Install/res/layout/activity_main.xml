<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.install.MainActivity" 
    android:gravity="center">

    <EditText
        android:id="@+id/et_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="king.apk or packagename"
        android:text="com.sensetime.demo"/>
    
    
	<Button 
	    android:onClick="onClick_install"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静默安装"/>
	
	<Button 
	    android:onClick="onClick_uninstall"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="静默卸载"/>
    
    
</LinearLayout>
